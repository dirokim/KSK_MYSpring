<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
  <mapper namespace="com.winter.app.product.ProductDAO">
  
  	<select id="list" resultType="com.winter.app.product.ProductDTO" parameterType="com.winter.app.product.ProductDTO">
  		SELECT * FROM PRODUCT
  	</select>
  	
  	<select id="detail" resultType="com.winter.app.product.ProductDTO" parameterType="com.winter.app.product.ProductDTO]">
  		SLECT * FROM PRODUCT WHERE PRODUCNTNUM=#{productNum}
  	</select>	
  
  	<insert id="add" parameterType="com.winter.app.product.ProductDTO">
  		INSERT INTO PRODUCT VALUES(PRODUCT_SEQ.NEXTVAL,#{productName},#{productContents},#{productRate},#{productJumsu);
  	</insert>
  
  	<delete id="delete" parameterType="com.winter.app.product.ProductDTO">
  		DELETE PRODUCT WHERE PRODUCTNUM=#{productNum}
  	</delete>
  	
  	<update id="update" parameterType="com.winter.app.product.ProductDTO">
  		UPDATE PRODUCT SET PRODUCTNAME=#{productName},PRODUCTCONTENTS=#{productContents},PRODUCTRATE=#{productRate},PRODUCTJUMSU=#{productJumsu} WHERE PRODUCTNUM=#{productNum}
  	</update>
  	
  	
  	
  </mapper>